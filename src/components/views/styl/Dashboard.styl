@import 'includes/lib';

#dashboard {
    h2 {
        font-size: 1.4rem;
        font-weight: 200;
        margin-bottom: 0;
        text-align: center;
    }
    #metrics-heading {
        display: none;
    }
}

#dashboard-description {
    margin: 10px;

    &:empty {
        margin: 0;
    }
}

#region {
    background: #fff;
    padding: 20px 0;
    z-index: 10;
}

.dashboard-header {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    top: 0;
    z-index: 10;

    h2 {
        margin: 0;
    }
}

.metric-overview-collection {
    margin-top: 25px;
}

#summary-metrics {
    align-items: center;
    display: flex;
    flex-direction: column;
}

@media $base-tablet {
    .dashboard-header {
        flex-direction: row;
        padding-bottom: 10px;
        position: sticky;
    }
}
